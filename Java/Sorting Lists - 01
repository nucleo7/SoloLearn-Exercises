// Exercises From Course Material

import java.util.ArrayList;
import java.util.Collections;

public class MyClass {
    public static void main(String[ ] args) {
        // animals ArrayList
        ArrayList<String> animals = new ArrayList<String>();
        animals.add("tiger");
        animals.add("cat");
        animals.add("snake");
        animals.add("brick");
        animals.add("dog");
        animals.add("bird");
        animals.remove("brick");
        
        System.out.println("animals...");
        System.out.println("added: " + animals);
        Collections.sort(animals);
        System.out.println("sorted: " + animals);
        System.out.println();
        
        
        // cars ArrayList
        ArrayList<String> cars = new ArrayList<String>();
        cars.add("Tesla");
        cars.add("Audi");
        cars.add("Student");
        cars.remove("Student");
        cars.add("Bugatti");
        cars.add("Lamborghini");
        cars.add("Porsche");
        cars.add("Ferrari");
        cars.add("BMW");
        
        System.out.println("cars...");
        System.out.println("added: " + cars);
        Collections.sort(cars);
        System.out.println("sorted: " + cars);
        System.out.println();
        
        // colors ArrayList
        ArrayList<String> colors = new ArrayList<String>();
        colors.add("Red");
        colors.add("Green");
        colors.add("Blue");
        colors.add("Cyan");
        colors.add("Magenta");
        colors.add("Yellow");
        colors.add("Black");
        
        System.out.println("colors...");
        System.out.println("added: " + colors);
        Collections.sort(colors);
        System.out.println("sorted: " + colors);
        Collections.reverse(colors);
        System.out.println("reversed: " + colors);
        System.out.println();
        
        // colors reversed
    }
}
