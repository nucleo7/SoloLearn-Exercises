// Exercises from Course Material 

class MyClass { 

   

    static void sayHello(String name) { 

        System.out.println("Hello " + name); 

    } 

     

    static void methodOne(String one) { 

        System.out.println("This is the word given: " + one); 

    } 

     

    static void methodTwo(int x, int y, int z) { 

        System.out.println("The sum of x, y, and z is: " + (x + y + z)); 

        System.out.println("The product of x, y, and z is: " + (x * y * z)); 

    } 

  

    public static void main(String[ ] args) { 

        sayHello("David"); 

        sayHello("Amy"); 

        methodOne("Word 1"); 

        methodOne("Word 2"); 

        methodTwo(1, 3, 5); 

        methodTwo(3, 5, 7); 

    } 

  

} 
