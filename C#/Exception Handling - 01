// Exercises from Course Material

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void Main(string[] args)
        {
            // arr1
            try {
                int[] arr1 = new int[] {4, 5, 8};
                Console.WriteLine("arr1[8]: " + arr1[8]);
           }
            catch(Exception e1) {
                Console.WriteLine("IndexOutOfRangeException: The array has no element at that index.");
            }
            
            // arr2
            try {
                int[] arr2 = new int[] {4, 5, 8};
                Console.WriteLine("arr2[1]: " + arr2[1]);
            }
            catch(Exception e2) {
                Console.WriteLine("IndexOutOfRangeException: The array has no element at that index.");
            }
            
            // arr3
            try {
                int[] arr3 = new int[] {1, 3, 5, 7};
                Console.WriteLine("arr3[7]: " + arr3[7]);
            }
            catch(Exception e3) {
                Console.WriteLine("IndexOutOfRangeException: The array has no element at that index.");
            }
            
            // arr4
            try {
                int[] arr4 = new int[] {1, 3, 5, 7};
                Console.WriteLine("arr4[1]: " + arr4[1]);
            }
            catch(Exception e4) {
                Console.WriteLine("IndexOutOfRangeException: The array has no element at that index.");
            }
        }
    }
}
