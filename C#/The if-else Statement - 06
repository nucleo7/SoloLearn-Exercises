// Exercises from Course Material
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void Main(string[] args)
        {
            int x = 33;
            
            if (x == 8) {
                Console.WriteLine("Value of x is 8");
            }
            else if (x == 18) {
                Console.WriteLine("Value of x is 18");
            }
            else if (x == 33) {
                Console.WriteLine("Value of x is 33");
            }
            else {
                Console.WriteLine("No match");
            }
            
            int diceRoll = 6;
            if (diceRoll == 1) {
               Console.WriteLine("Damn, bad luck! You rolled a 1.");
            }
            else if (diceRoll == 2) {
               Console.WriteLine("You rolled a 2.");
            }
            else if (diceRoll == 3) {
               Console.WriteLine("You rolled a 3.");
            }
            else if (diceRoll == 4) {
               Console.WriteLine("You rolled a 4.");
            }
            else if (diceRoll == 5) {
               Console.WriteLine("You rolled a 5.");
            }
            else if (diceRoll == 6) {
               Console.WriteLine("Awesome! You rolled a 6.");
            }
            else {
               Console.WriteLine("Impossible! You're cheating!");
            }
        }
    }
}
