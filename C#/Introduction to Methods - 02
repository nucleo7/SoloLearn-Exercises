// Exercises from Course Material
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace SoloLearn
{
    class Program
    {
        static void SayHi()
        {
            Console.WriteLine("Hello");
        }
        static void lotsOfWords()
        {
            Console.WriteLine("Repetition...");
            Console.WriteLine("... and Repetition...");
        }
        static void Main(string[] args)
        {
            SayHi();
            SayHi();
            SayHi();
            lotsOfWords();
            lotsOfWords();
        }
    }
}
