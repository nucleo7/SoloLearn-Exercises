<!-- Exercises from Course Material -->
<?php
    $today = 'Tue';

    switch ($today) {
        case "Mon":
            echo "Today is Monday.";
            break;
        case "Tue":
            echo "Today is Tuesday.";
            break;
        case "Wed":
            echo "Today is Wednesday.";
            break;
        case "Thu":
            echo "Today is Thursday.";
            break;
        case "Fri":
             echo "Today is Friday.";
             break;
        case "Sat":
             echo "Today is Saturday.";
             break;
        case "Sun":
             echo "Today is Sunday.";
             break;
        default:
             echo "Invalid day.";
    }
    echo "<br />";
    
    
    $color = "Magenta";
    switch ($color) {
        case "Red":
        case "Green":
        case "Blue":
            echo "The color is from RGB.";
            break;
        case "Cyan":
        case "Magenta":
        case "Yellow":
        case "Black":
            echo "The color is from CMYK.";
            break;
        default:
            echo "The color is not from RGB or CMYK.";
    }
?>
